@model Person
@{
    ViewData["Title"] = "Delete";
}

<h1>Are you sure to Delete <span class="text-danger">@Model.FirstName @Model.LastName ?</span> </h1>

<form asp-action="Delete" method="post">
    @Html.HiddenFor(getID=>getID.Id)
<input type="submit" value="Sure,Delete ?" class="btn btn-outline-danger" />
<a asp-action="AllContact" asp-controller="Contact" class="btn btn-outline-warning">Cancle</a>
</form>
